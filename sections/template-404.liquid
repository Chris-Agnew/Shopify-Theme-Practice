<div class="max-w-md">
  <div class="text-5xl font-bold my-4">
    {{ section.settings.title }}
  </div>
  <div class="my-4">
    <div class="text-base md:text-xl leading-normal">
      {{ section.settings.subtext }}
    </div>
    <div class="my-4">
      {% if section.settings.button_link == blank %}
        {% assign shop_url = shop.secure_url %}
      {% else %}
        {% assign shop_url = section.settings.button_link %}
      {% endif %}
      <a
        href="{{shop_url}}"
        class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white"
      >
        {{- section.settings.button_label -}}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "404 Heading Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "404 Subtext",
      "default": "The page you are looking for does not exist."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "404 Button Text",
      "default": "Go Back to Home Page"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    }
  ]
}
{% endschema %}
